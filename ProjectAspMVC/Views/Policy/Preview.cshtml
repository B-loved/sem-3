@model HealthInsuranceService.Data.PolicyRequest

<div>
    <h4>PolicyRequest</h4>
    <hr />
    <input type="hidden" name="pId" id="pId" value="@ViewBag.policy.Id" />
    <dl class="dl-horizontal">

        <dt>
            Name
        </dt>

        <dd>
            @Session["EmployeeName"]
        </dd>

        <dt>
            Policy Name
        </dt>

        <dd>
            @ViewBag.policy.PolicyName
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RequestDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequestDate)
        </dd>
        <dt>
            Amount
        </dt>

        <dd>
            @ViewBag.policy.Amount
        </dd>
        <dt>
            EMI
        </dt>

        <dd>
            @ViewBag.policy.EMI
        </dd>
    </dl>
</div>

