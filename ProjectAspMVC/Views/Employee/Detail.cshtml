                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </div>
        

    </dl>
    <p>
        @Html.ActionLink("Update", "Update", new { id = Model.Id }) 
